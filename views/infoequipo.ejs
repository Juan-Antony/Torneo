<h1>INFORMACION DE EQUIPOS</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombres</th>
            <th>Integrantes</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody id="datos">

             <% lequipos.forEach(function(elem) { %>
                <tr>
                    <td><%= elem.nombreEquipo %></td>
                    <td><%= elem.integrantes %></td>
                        <% lestadoeq.forEach(function(c) { 
                            if (c.id == elem.estadoEquipoId) { %>
                                <td> 
                                    <select name="estadoeq" >
                                    <% lestadoeq.forEach(function(c) { %>
                                        <option value="<%= c.id %>"><%= c.estadoEsquipoId %></option>
                                    <% }) %>
                                    </select> 
                                </td>
                            <% } %>
                        <% }) %>
                </tr>
             <% }) %>

     </tbody>
</table>
<br>
<input type="button" value="Regresar" onclick="history.back()" />